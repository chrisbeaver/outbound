{
  "name": "lapi",
  "displayName": "Lapi",
  "description": "Laravel API Tester",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/artisan",
    "onCommand:lapi.testEndpoint",
    "onCommand:lapi.displayRoutesTable"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lapi.displayRoutesTable",
        "title": "Lapi: Display Routes Table"
      },
      {
        "command": "lapi.testEndpoint",
        "title": "Lapi: Test Endpoint"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "lapi.testEndpoint",
          "when": "editorLangId == php",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Lapi",
      "properties": {
        "lapi.apiHost": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "The base URL for the Laravel API server"
        },
        "lapi.routeListCommand": {
          "type": "string",
          "default": "php artisan route:list",
          "description": "Command to list Laravel routes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}