{
  "name": "outbound",
  "displayName": "Outbound",
  "description": "Laravel API Tester",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.108.1"
  },
  "license": "MIT",
  "publisher": "ChrisBeaver",
  "categories": [
    "Other"
  ],
  "icon": "docs/images/outbound.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisbeaver/outbound.git"
  },
  "activationEvents": [
    "workspaceContains:**/artisan",
    "onCommand:outbound.testEndpoint",
    "onCommand:outbound.displayRoutesTable"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "outbound.displayRoutesTable",
        "title": "Outbound: Display Routes Table"
      },
      {
        "command": "outbound.testEndpoint",
        "title": "Outbound: Test Endpoint"
      },
      {
        "command": "outbound.testEndpointFromContext",
        "title": "Outbound: Test Endpoint"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "outbound.testEndpoint",
          "when": "false"
        },
        {
          "command": "outbound.testEndpointFromContext",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "outbound.testEndpointFromContext",
          "when": "editorLangId == php",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Outbound",
      "properties": {
        "outbound.apiHost": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "The base URL for the Laravel API server"
        },
        "outbound.routeListCommand": {
          "type": "string",
          "default": "php artisan route:list",
          "description": "Command to list Laravel routes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
